<h1 class="text-center mt-4">Beautiful Restaurants</h1>
<div class="row">
  <% @restaurants.each do |restaurant| %>
    <div class="col-sm-4 d-flex justify-content-center">
    <div class="card text-center mt-5 shadow-sm" style="width: 27rem;">
    <img src="https://picsum.photos/200" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= restaurant.name %></h5>
        <p class="card-text"><%= restaurant.address %></p>
        <%= link_to "More details", restaurant_path(restaurant), class:"btn btn-info" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
